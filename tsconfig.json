{
    "compilerOptions": {
        "target": "es2022",
        "module": "ESNext",
        "baseUrl": ".",
        "rootDir": ".",
        "paths": {
            "@generatorjs": ["./src/generatorjs/index"],
            "@generator": ["./src/index"],
            "@test/*": ["./test/*"],
            "@utils": ["./src/utils"],
            "@dom-utils": ["./src/dom-utils"],
            "@constants": ["./src/constants"]
        },
        "noEmit": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
